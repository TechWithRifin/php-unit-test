{
    "name": "php/belajar-unit-testing",
    "type": "project",
    "autoload": {
        "psr-4": {
            "Php\\Tests\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Php\\Tests\\":"tests"
        }
    },
    "authors": [
        {
            "name": "arifin"
        }
    ],
    "require": {
        "php":">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit":"9.5.5"
    },
    "scripts": {
        "test":"phpunit --configuration phpunit.xml",
        "test:all":"phpunit --configuration phpunit.xml --testsuite all",
        "test:product":"phpunit --configuration phpunit.xml --testsuite product",
        "test:counter":"phpunit --configuration phpunit.xml --testsuite counter"
    }
}
